<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable name="viewmodel" type="laboratorio.app.viewmodels.SignUpViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.UserProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_credentials_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_view_credentials_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/profile_logout_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    app:tint="#E09F3E"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato"
                    android:text="@{viewmodel.email}"
                    android:textColor="#540B0E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_logout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/profile_update_credentials_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_view_credentials_layout">

                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E09F3E"
                    android:minHeight="0dp"
                    android:text="Cerrar sesión"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_credentials_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_scroll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_update_credentials_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFF3B0"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/profile_update_email_button"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:minHeight="0dp"
                        android:text="Cambiar\nemail"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/half_guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/profile_update_password_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:minHeight="0dp"
                        android:text="Cambiar\ncontraseña"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/half_guideline"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/half_guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FFF3B0"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Información personal"
                    android:textColor="#540B0E"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/profile_personal_info_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_update_credentials_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_personal_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/profile_residency_address_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/profile_save_changes_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="0dp"
                        android:text="Guardar cambios"
                        android:textSize="14sp"
                        android:visibility="@{viewmodel.personalInformationChanged ? View.VISIBLE : View.GONE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragment" />

                    <fragment
                        android:id="@+id/fragment"
                        android:name="laboratorio.app.fragments.forms.PersonalFormFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toTopOf="@+id/profile_save_changes_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout="@layout/fragment_personal_form" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_residency_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@id/profile_delivery_address_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_personal_info_layout">

                    <Button
                        android:id="@+id/update_residency_address_button"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="8dp"
                        android:minWidth="0dp"
                        android:text="Cambiar"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/profile_residency_address_text"
                        app:layout_constraintTop_toBottomOf="@+id/profile_residency_address_label"
                        app:layout_constraintVertical_bias="1.0" />

                    <EditText
                        android:id="@+id/profile_residency_address_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="4dp"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/lato"
                        android:hint="Dirección de residencia"
                        android:inputType="none"
                        android:text="@{viewmodel.residencyAddress.street}"
                        android:textColor="#540B0E"
                        android:textColorHint="#540B0E"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/update_residency_address_button"
                        app:layout_constraintStart_toEndOf="@+id/profile_residency_address_icon"
                        app:layout_constraintTop_toBottomOf="@id/profile_residency_address_label" />

                    <ImageButton
                        android:id="@+id/profile_residency_address_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/ic_baseline_place_24"
                        android:tint="#E09F3E"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/profile_residency_address_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_residency_address_label"
                        app:layout_constraintVertical_bias="0.023" />

                    <TextView
                        android:id="@+id/profile_residency_address_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#FFF3B0"
                        android:fontFamily="@font/lato"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Dirección de residencia"
                        android:textColor="#540B0E"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@id/profile_residency_address_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_delivery_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_residency_address_layout">

                    <Button
                        android:id="@+id/update_delivery_address_button"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="8dp"
                        android:minWidth="0dp"
                        android:text="Cambiar"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/profile_delivery_address_text"
                        app:layout_constraintTop_toBottomOf="@+id/profile_delivery_address_label"
                        app:layout_constraintVertical_bias="1.0" />

                    <EditText
                        android:id="@+id/profile_delivery_address_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="4dp"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/lato"
                        android:hint="Dirección de entrega"
                        android:inputType="none"
                        android:text="@{viewmodel.deliveryAddress.street}"
                        android:textColor="#540B0E"
                        android:textColorHint="#540B0E"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/update_delivery_address_button"
                        app:layout_constraintStart_toEndOf="@+id/profile_delivery_address_icon"
                        app:layout_constraintTop_toBottomOf="@id/profile_delivery_address_label" />

                    <ImageButton
                        android:id="@+id/profile_delivery_address_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/ic_baseline_place_24"
                        android:tint="#E09F3E"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/profile_delivery_address_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_delivery_address_label"
                        app:layout_constraintVertical_bias="0.023" />

                    <TextView
                        android:id="@+id/profile_delivery_address_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#FFF3B0"
                        android:fontFamily="@font/lato"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Dirección de entrega"
                        android:textColor="#540B0E"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@id/profile_delivery_address_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>